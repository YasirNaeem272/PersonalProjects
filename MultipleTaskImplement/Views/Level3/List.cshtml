
@model IEnumerable<TashBlock.Models.HeadLevel3>



<h2>Level2</h2>
@*<a asp-action="Create" class="btn btn-outline-primary">Add New</a>*@
 
<table class="table">
    <thead>
        <tr>
            <th>Action</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>


        </tr>
    </thead>


    @{ var i = 0;}
    @foreach (var item in Model)
    {
        i++;
        <tr>

            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, item.Name, item.Code }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "DeleteStd", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }
   
</table>
