@model BOL_Bussines_Object_Layer_.tb_Address
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<h2>Edit</h2>


<div class="right_col" role="main">

    @using(Html.BeginForm("Edit", "Address", FormMethod.Post))
    {
        <div class="form-group">
            <input type="hidden" id="Address_Id" name="Address_Id" value="@Model.Address_Id" />
            <label>AddressState</label>

            <input type="text" class="form-control" name="Address_State" value="@Model.Address_State"/>
        </div>
        <div class="form-group">

            <label>AddressCity</label>

            <input type="text" class="form-control" name="Address_City" value="@Model.Address_City"/>
        </div>
        <div class="form-group">

            <label>AddressArea</label>

            <input type="text" class="form-control" name="Address_Area" value="@Model.Address_Area"/>
        </div>
        <div class="form-group">

            <label>CompleteAddress</label>

            <input type="text" class="form-control" name="Address_Complete_Adres" value="@Model.Address_Complete_Adres"/>
        </div>
        <div class="form-group">

            <button type="submit" class="btn btn-success" value="Edit">Submit</button>
        </div>
    }
</div>