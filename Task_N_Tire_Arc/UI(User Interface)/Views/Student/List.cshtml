@model IEnumerable<BOL_Bussines_Object_Layer_.tb_Student>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<h2>List</h2>


<div class="right_col" role="main">
    <table class="table table-hover" id="mytable">
        
            <a class="btn btn-primary" href="@Url.Action("Create","Student")">Create</a>
            <tr>
                <th>Std_F_Name</th>
                <th>Std_L_Name</th>
                <th>Std_Cntct_Number</th>
                <th>Std_Image</th>
                <th>Class_Id</th>
                <th>Address_Id</th>
            </tr>
   
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Std_F_Name</td>
                    <td>@item.Std_L_Name</td>
                    <td>@item.Std_Cntct_Number</td>
                    <td>@item.Std_Image</td>
                    <td>@item.Class_Id</td>
                    <td>@item.Address_Id</td>
                    


                    <td>
                        <a href="@Url.Action("Edit/"+item.Std_Id+"","Student")" class="btn btn-success">Edit</a>

                    </td>
                </tr>
            }
        
    </table>

</div>